<Window x:Class="WpfApp5.FontsChoose"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="FontsChoose" Height="450" Width="800" >
    <Grid>
        <ComboBox x:Name="FontFamily" HorizontalAlignment="Left" Margin="70,37,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding Source={x:Static Fonts.SystemFontFamilies}}"/>
        <TextBox x:Name="FontSize" HorizontalAlignment="Left" Margin="289,40,0,0" TextWrapping="Wrap" Text="12" VerticalAlignment="Top" Width="31"/>
        <Button Content="Применить изменения" HorizontalAlignment="Left" Margin="263,124,0,0" VerticalAlignment="Top" Click="Button_Click"/>


    </Grid>
</Window>
